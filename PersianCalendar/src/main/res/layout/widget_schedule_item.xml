<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_schedule_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="0dp">

        <FrameLayout
            android:id="@+id/top_space"
            android:layout_width="wrap_content"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_schedule_highlight"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/widget_schedule_highlight_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weekday_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".75"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/widget_schedule_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/widget_schedule_title"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_schedule_horizontal_padding"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/widget_schedule_horizontal_padding"
        android:layout_marginBottom="2dp"
        android:ellipsize="middle"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="6dp" />

</FrameLayout>