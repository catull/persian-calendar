<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_modern_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".WidgetMonth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/month_name_wrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/widget_month_view_name">

            <TextView
                android:id="@+id/month_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:lineSpacingMultiplier="1.1"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="0dp"
                android:paddingBottom="8dp"
                android:textColor="@color/widget_modern_text"
                android:textSize="18sp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/previous_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:alpha=".8"
            android:background="@drawable/widget_month_button"
            android:contentDescription="@string/previous_x"
            android:src="@drawable/ic_navigate_before"
            android:tint="@color/widget_add_event" />

        <ImageButton
            android:id="@+id/next_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:alpha=".8"
            android:background="@drawable/widget_month_button"
            android:contentDescription="@string/next_x"
            android:src="@drawable/ic_navigate_next"
            android:tint="@color/widget_add_event" />

        <ImageButton
            android:id="@+id/add_event"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/widget_add_event"
            android:contentDescription="@string/add_event"
            android:src="@drawable/widget_add_event_icon"
            android:tint="@color/widget_add_event_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/weekday_week_number_placeholder"
            android:layout_width="@dimen/widget_month_weeknumber_width"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weekday_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/weekday_name_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/widget_modern_text"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
